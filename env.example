# Palestine Memorial - Environment Variables Template
# Copy this file to .env.local and fill in your values

# Site Configuration
NEXT_PUBLIC_SITE_URL=https://your-domain.vercel.app
NEXT_PUBLIC_SITE_NAME="Palestine Memorial"

# Analytics (Optional)
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=

# Admin Panel (Optional - for future authentication)
ADMIN_PASSWORD=your_secure_admin_password

# Database (Optional - for future database integration)
DATABASE_URL=

# Upload Configuration (Optional - for future file uploads)
UPLOAD_SECRET=your_upload_secret_key
NEXT_PUBLIC_MAX_FILE_SIZE=5242880

# API Configuration
NEXT_PUBLIC_API_BASE_URL=https://your-domain.vercel.app/api

# Memorial Data Sources
NEXT_PUBLIC_DATA_SOURCE_PRIMARY=https://data.techforpalestine.org
NEXT_PUBLIC_DATA_SOURCE_BACKUP=

# Performance Monitoring (Optional)
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=
